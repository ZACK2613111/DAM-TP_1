<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ✅ Fichiers internes de l'application -->
    <files-path
        name="internal_files"
        path="." />

    <!-- ✅ Cache interne de l'application -->
    <cache-path
        name="cache_files"
        path="." />

    <!-- ✅ Stockage externe (SD Card, galerie, etc.) -->
    <external-path
        name="external_files"
        path="." />

    <!-- ✅ Fichiers externes de l'application -->
    <external-files-path
        name="app_external_files"
        path="." />

    <!-- ✅ Cache externe de l'application -->
    <external-cache-path
        name="external_cache"
        path="." />

    <!-- ✅ Dossier spécifique pour les images (optionnel) -->
    <external-files-path
        name="images"
        path="Pictures/" />
</paths>
